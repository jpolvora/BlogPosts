@{
    Response.StatusCode = 404;

    Layout = null;
    if (IsAjax)
    {
        Response.Write("Resource not found");
        return;
    }

    const string html = "text/html";
    bool requestingHtml = Request.AcceptTypes.Any(type => html.Equals(type, StringComparison.OrdinalIgnoreCase));

    if (!requestingHtml)
    {
        //não renderiza nada
        return;
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        @{
            <p>@Request.RawUrl</p>
        }
        <p>404...</p>
    </div>
</body>
</html>
